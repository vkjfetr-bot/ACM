// Grafana Alloy Configuration for ACM Observability Stack
// =========================================================
// 
// This config receives OTLP telemetry from ACM Python applications
// and forwards to the Grafana stack:
//   - Traces  -> Tempo
//   - Logs    -> Loki
//   - Metrics -> Prometheus/Mimir (or local scrape endpoint)
//
// Start Alloy with: alloy run alloy.config
//
// ACM Python apps should set:
//   OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
//   OTEL_SERVICE_NAME=acm-pipeline

// ============================================================================
// LOGGING CONFIG
// ============================================================================
logging {
  level  = "info"
  format = "logfmt"
}

// ============================================================================
// OTLP RECEIVER
// Accepts traces, metrics, and logs from Python OpenTelemetry SDK
// ============================================================================
otelcol.receiver.otlp "default" {
  grpc {
    endpoint = "0.0.0.0:4317"
  }
  http {
    endpoint = "0.0.0.0:4318"
  }

  output {
    traces  = [otelcol.processor.batch.default.input]
    metrics = [otelcol.processor.batch.default.input]
    logs    = [otelcol.processor.batch.default.input]
  }
}

// ============================================================================
// BATCH PROCESSOR
// Batches telemetry for efficient export
// ============================================================================
otelcol.processor.batch "default" {
  timeout = "5s"
  send_batch_size = 1000
  send_batch_max_size = 2000

  output {
    traces  = [otelcol.exporter.otlp.tempo.input]
    metrics = [otelcol.exporter.prometheus.metrics.input]
    logs    = [otelcol.exporter.loki.default.input]
  }
}

// ============================================================================
// TEMPO EXPORTER
// Sends traces to Grafana Tempo
// ============================================================================
otelcol.exporter.otlp "tempo" {
  client {
    endpoint = "localhost:4317"
    tls {
      insecure = true
      insecure_skip_verify = true
    }
  }
}

// ============================================================================
// PROMETHEUS EXPORTER
// Converts OTEL metrics to Prometheus format
// Exposes at /metrics for Grafana scraping
// ============================================================================
otelcol.exporter.prometheus "metrics" {
  forward_to = [prometheus.remote_write.default.receiver]
}

// Remote write to Prometheus/Mimir (optional - comment out if not using)
prometheus.remote_write "default" {
  endpoint {
    url = "http://localhost:9090/api/v1/write"
    // Set to false if Prometheus not available
    // write_relabel_configs = []
  }
  external_labels = {
    cluster = "acm-local",
  }
}

// ============================================================================
// LOKI EXPORTER
// Sends logs to Grafana Loki
// ============================================================================
otelcol.exporter.loki "default" {
  forward_to = [loki.write.default.receiver]
}

loki.write "default" {
  endpoint {
    url = "http://localhost:3100/loki/api/v1/push"
  }
  external_labels = {
    cluster = "acm-local",
  }
}

// ============================================================================
// OPTIONAL: LOCAL LOG FILE COLLECTION
// Scrapes ACM log files and sends to Loki
// Uncomment and adjust paths as needed
