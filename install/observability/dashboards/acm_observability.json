{
  "uid": "acm-observability",
  "title": "ACM Observability",
  "description": "Monitor ACM pipeline performance, traces, logs, and metrics",
  "tags": ["acm", "observability", "otel"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Pipeline Logs (Loki)",
      "type": "logs",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 8 },
      "datasource": { "uid": "loki-ds", "type": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{app=\"acm\"} |= ``",
          "queryType": "range"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "title": "Log Level Distribution",
      "type": "piechart",
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
      "datasource": { "uid": "loki-ds", "type": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (level) (count_over_time({app=\"acm\"} [$__range]))",
          "legendFormat": "{{level}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "pie",
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      }
    },
    {
      "id": 3,
      "title": "Logs Over Time",
      "type": "timeseries",
      "gridPos": { "x": 8, "y": 8, "w": 16, "h": 8 },
      "datasource": { "uid": "loki-ds", "type": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (level) (count_over_time({app=\"acm\"} [$__interval]))",
          "legendFormat": "{{level}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 80
          },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 4,
      "title": "Recent Traces (Tempo)",
      "type": "table",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 8 },
      "datasource": { "uid": "tempo-ds", "type": "tempo" },
      "targets": [
        {
          "refId": "A",
          "queryType": "traceqlSearch",
          "limit": 20,
          "filters": [
            { "id": "service-name", "tag": "service.name", "operator": "=", "value": ["acm-pipeline"], "scope": "resource" }
          ]
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Error Logs",
      "type": "logs",
      "gridPos": { "x": 0, "y": 24, "w": 24, "h": 6 },
      "datasource": { "uid": "loki-ds", "type": "loki" },
      "targets": [
        {
          "refId": "A",
          "expr": "{app=\"acm\"} |~ `(?i)(error|exception|failed|critical)`",
          "queryType": "range"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      },
      "fieldConfig": {
        "defaults": {
          "color": { "fixedColor": "red", "mode": "fixed" }
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
